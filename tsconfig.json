{
  "compilerOptions": {
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": ["./*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts", "app/page.js", "app/layout.js", "app/api/chat/route.js", "app/openai.js", "app/assistant-config.js", "app/api/assistants/threads/[threadId]/messages/route.js", "app/api/assistants/threads/route.js", "app/api/assistants/threads/[threadId]/actions/route.js", "components/Chat.js"],
  "exclude": ["node_modules"]
}
